{
    "manifest_version": 3,
    "name": "BullyProof",
    "version": "1.0.0",
    "description": "An extension that filters negative comments in twitter.",
    "icons": {
        "16": "/images/lock.png",
        "32": "/images/lock.png",
        "48": "/images/lock.png",
        "128": "/images/lock.png"
      },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ],
    "options_page": "options/options.html",
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://twitter.com/*"
            ],
            "css": [
                "css/output.css"
            ]
        }
    ]
}