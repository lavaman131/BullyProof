{
    "manifest_version": 3,
    "name": "BullyProof",
    "version": "1.0.0",
    "description": "An extension that filters negative comments in twitter.",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://twitter.com/*"
            ]
        }
    ]
}